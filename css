/*
 * Geral: Estilos para o corpo da página.
 * Centraliza a calculadora vertical e horizontalmente.
 */
body {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    margin: 0;
    background-color: #f0f0f0;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

/*
 * Estilo do contêiner principal da calculadora.
 * Adiciona um fundo branco, bordas arredondadas e uma sombra suave.
 */
.calculadora {
    background-color: #fff;
    border-radius: 12px;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    padding: 24px;
    width: 320px;
    border: 1px solid #ddd;
}

/*
 * Estilo para o visor (display) da calculadora.
 * Fundo escuro, texto branco, fonte grande e alinhamento à direita.
 */
.visor {
    width: calc(100% - 20px);
    height: 70px;
    background-color: #222;
    color: #fff;
    font-size: 2.5em;
    text-align: right;
    padding: 0 10px;
    border: none;
    border-radius: 8px;
    margin-bottom: 20px;
    box-sizing: border-box;
    font-weight: 300;
}

/*
 * Estilo para o teclado de botões.
 * Usa CSS Grid para criar uma grade de 4 colunas com espaçamento.
 */
.teclado {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 12px;
}

/*
 * Estilos gerais para todos os botões.
 * Define altura, tamanho da fonte, bordas e transição de cor.
 */
button {
    height: 65px;
    font-size: 1.6em;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: background-color 0.2s, transform 0.1s;
    font-weight: 400;
}

/*
 * Estilo para os botões de números.
 * Fundo cinza claro.
 */
.numero {
    background-color: #e9e9e9;
    color: #333;
}

.numero:hover {
    background-color: #dcdcdc;
}

/*
 * Estilo para o botão "0".
 * Ocupa duas colunas da grade.
 */
.zero {
    grid-column: span 2;
}

/*
 * Estilo para os botões de operadores (+, -, *, /).
 * Fundo laranja, texto branco.
 */
.operador {
    background-color: #ff9f0a;
    color: #fff;
}

.operador:hover {
    background-color: #e68a00;
}

/*
 * Estilo específico para o botão de igual (=).
 * Fundo verde.
 */
[data-acao="igual"] {
    background-color: #28a745;
}

[data-acao="igual"]:hover {
    background-color: #218838;
}

/*
 * Estilo para os botões de limpar (C) e deletar (DEL).
 * Fundo vermelho.
 */
[data-acao="limpar"], [data-acao="deletar"] {
    background-color: #dc3545;
}

[data-acao="limpar"]:hover, [data-acao="deletar"]:hover {
    background-color: #c82333;
}

/*
 * Efeito de clique em todos os botões.
 * Adiciona um pequeno "achatamento" para dar feedback visual.
 */
button:active {
    transform: scale(0.95);
}
